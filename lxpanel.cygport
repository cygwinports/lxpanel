inherit gnome2

NAME="lxpanel"
VERSION=0.8.2
RELEASE=1
CATEGORY="LXDE"
SUMMARY="LXDE panel"
DESCRIPTION="Lightweight X11 Desktop Environment panel"
HOMEPAGE="http://lxde.org/"
SRC_URI="mirror://sourceforge/lxde/${NAME}-${VERSION}.tar.xz"
PATCH_URI="
	0.7.2-plugin-loader.patch
	0.8.2-as-needed.patch
	0.8.2-libtool-install.patch
"

PKG_NAMES="${NAME} ${NAME}-devel"
lxpanel_REQUIRES="lxmenu-data"
lxpanel_CONTENTS="etc/ usr/bin/ usr/lib/lxpanel/plugins/ usr/share/"
lxpanel_devel_CONTENTS="usr/include/ usr/lib/lxpanel/lib* usr/lib/pkgconfig/"

CYGCONF_ARGS="
	--disable-alsa
	--disable-libiw
	--with-plugins=cpu,deskno,kbled,monitors,volume,weather,xkb
"
